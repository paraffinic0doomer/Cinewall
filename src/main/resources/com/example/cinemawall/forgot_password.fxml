<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(to bottom, #1A237E, #3949AB);" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinemawall.HelloController">
    <children>
        <!-- Centered VBox -->
        <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" prefHeight="400.0" prefWidth="300.0" spacing="15.0">
            <children>
                <!-- Page Title -->
                <Label style="-fx-font-family: 'Arial'; -fx-font-size: 24px; -fx-font-weight: bold;" text="Forgot Password" textFill="WHITE" />

                <!-- Email Input -->
                <TextField fx:id="emailField" promptText="Enter your email" style="-fx-background-color: #FFFFFF; -fx-border-color: #3949AB; -fx-border-radius: 5; -fx-padding: 5;" />

                <!-- Send Button -->
                <Button fx:id="sendButton" onAction="#handleSend" style="-fx-background-color: linear-gradient(to bottom, #0D47A1, #1565C0); -fx-text-fill: white; -fx-font-size: 16; -fx-border-radius: 5;" text="Send" />

                <!-- Verification Code Input -->
                <TextField fx:id="verificationField" promptText="Enter verification code" style="-fx-background-color: #FFFFFF; -fx-border-color: #3949AB; -fx-border-radius: 5; -fx-padding: 5;" />

                <!-- Next Button -->
                <Button fx:id="nextButton" onAction="#handleNext" style="-fx-background-color: linear-gradient(to bottom, #0D47A1, #1565C0); -fx-text-fill: white; -fx-font-size: 16; -fx-border-radius: 5;" text="Next" />
            </children>
        </VBox>
    </children>
</AnchorPane>
